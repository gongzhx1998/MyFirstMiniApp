.header-input{
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px #333 solid;
  border-radius: 50rpx;
  margin-left: 100rpx;
  box-sizing: border-box;
}
.SearchView{
  width: 100%;
}
.div{
  width: 100%;
  height: 600rpx;
}
.div image{
  width: 100%;
  height: 600rpx;
}
.post-Container{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-bottom: 20rpx;
  border-top: 1px solid #e3e3e3;
  border-bottom: 1px solid #e3e3e3;
  box-sizing: border-box;
}
.post-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;  
}
.post-header-image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 20rpx 0 20rpx;
}
.post-header-text{
  font-size: 36rpx;
  color: #333;
  margin-right: 20rpx;
}
.post-title{
  font-weight: bold;
  font-size:36rpx;
  margin:35rpx 0 20rpx 20rpx;
}
.post-footer{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0 20rpx 0;
}
.post-footer image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx 0 20rpx;
}
.post-content{
  text-indent: 20rpx;
  color: #666;
}